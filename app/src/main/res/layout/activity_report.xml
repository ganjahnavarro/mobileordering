<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="12"
    android:background="@drawable/a4"
    tools:context=".ReportActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_zero_dimen"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="12">

        <Space
            android:layout_width="@dimen/linear_zero_dimen"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <TextView
            android:layout_width="@dimen/linear_zero_dimen"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center"
            android:text="@string/app_act_report"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/ibReportLogout"
            android:layout_width="@dimen/linear_zero_dimen"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:cropToPadding="true"
            android:padding="@dimen/padding_lg"
            android:scaleType="fitCenter"
            android:src="@drawable/home" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_zero_dimen"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="12">

        <TextView
            android:id="@+id/tvReportCDate"
            android:layout_width="@dimen/linear_zero_dimen"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center"
            android:textSize="@dimen/textsize_md"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button"
            android:layout_width="@dimen/linear_zero_dimen"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="@dimen/textsize_xs"
            android:text="Date" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_zero_dimen"
        android:layout_weight="1" />

    <Button
        android:id="@+id/bReportDaily"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_zero_dimen"
        android:layout_weight="2"
        android:text="Generate Daily Report" />

    <Button
        android:id="@+id/bReportMonthly"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_zero_dimen"
        android:layout_weight="2"
        android:text="Generate Monthly Report" />

    <Button
        android:id="@+id/bReportYearly"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_zero_dimen"
        android:layout_weight="2"
        android:text="Generate Yearly Report" />

</LinearLayout>
