<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:weightSum="12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_zero_dimen"
        android:layout_gravity="center_horizontal"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:weightSum="12">

        <TextView
            android:id="@+id/tvCartLabel"
            android:layout_width="@dimen/linear_zero_dimen"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center_vertical"
            android:textSize="@dimen/textsize_lg" />

        <ImageButton
            android:id="@+id/ibCartRemove"
            android:layout_width="@dimen/linear_zero_dimen"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:cropToPadding="true"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/close" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_zero_dimen"
        android:layout_gravity="center_horizontal"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:weightSum="12">

        <TextView
            android:id="@+id/tvCartQty"
            android:layout_width="@dimen/linear_zero_dimen"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="asasa"
            android:textSize="@dimen/textsize_md" />

        <TextView
            android:id="@+id/tvCartPrice"
            android:layout_width="@dimen/linear_zero_dimen"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="end|center"
            android:text="asasa"
            android:textSize="@dimen/textsize_md" />

    </LinearLayout>

</LinearLayout>