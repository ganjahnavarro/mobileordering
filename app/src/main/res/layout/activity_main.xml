<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mobile.mobileordering.MainActivity">

    <ImageButton
        android:id="@+id/ibMainAdmin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/gear"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tempVarMainMainName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/app_main"
        android:textSize="@dimen/textsize_xx"
        android:textStyle="bold"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/tempVarMainSubName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tempVarMainMainName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="@string/app_sub"
        android:textSize="@dimen/textsize_sm"
        android:textStyle="italic" />

    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignTop="@+id/tempVarMainSubName"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginEnd="30dp"-->
        <!--android:layout_marginStart="30dp"-->
        <!--android:layout_marginTop="50dp"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:layout_marginBottom="80dp"-->
        <!--android:layout_alignBottom="@+id/bMainCustomer"-->
        <!--android:src="@drawable/icon" />-->

    <Button
        android:id="@+id/bMainCustomer"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:background="@android:color/transparent"
        android:text="Touch Here to Start"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/textsize_md"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bAddFeedback"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@android:color/transparent"
        android:text="RATE US"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/textsize_sm"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/app_main"
        android:textSize="@dimen/textsize_sm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/app_version"
        android:textSize="@dimen/textsize_xs" />

</RelativeLayout>
