<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobile.mobileordering">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-sdk android:minSdkVersion="14" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service android:name=".util.FetchOrders" android:icon="@drawable/download" android:label="@string/app_name" android:enabled="true"/>

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".CategoryActivity"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".ItemsActivity"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:parentActivityName=".CategoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CartActivity"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:screenOrientation="portrait" />


        <activity
            android:name=".MenuActivity"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OrdersActivity"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:parentActivityName=".MenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InventoryActivity"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:parentActivityName=".MenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ReportActivity"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:parentActivityName=".MenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NewItemActivity"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:parentActivityName=".MenuActivity"
            android:screenOrientation="portrait" />


        <activity
            android:name=".PrintDialogActivity"
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:screenOrientation="portrait" />

    </application>

</manifest>
