<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customerMenuLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_md"
    android:orientation="vertical"
    android:weightSum="12">

    <TextView
        android:id="@+id/tvItemsLabel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_zero_dimen"
        android:layout_weight="2"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="@dimen/textsize_xs" />

    <ImageView
        android:id="@+id/ivItemsDisplay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_zero_dimen"
        android:scaleType="centerCrop"
        android:cropToPadding="true"
        android:padding="@dimen/padding_lg"
        android:layout_weight="8" />

    <TextView
        android:id="@+id/tvItemsPrice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/linear_zero_dimen"
        android:layout_weight="2"
        android:textStyle="italic"
        android:gravity="end"
        android:paddingEnd="@dimen/padding_lg"
        android:textSize="@dimen/textsize_xs" />
</LinearLayout>